#include <stdio.h> 
int main (void)
{
	int i,n,z;
	printf("imput n:");
	scanf("%d",&n);
	for (i=1;i<=n;i++)
	{
		int j,c;
		for (j=1;j<=n-i;j++)
			printf(" ");
		for(c=1;c<=2*i-1;c++)
			printf("*");
		printf("\n");
	}
	for(z=1;z<n;z++)
	{
		int j,c;
		for(j=1;j<=z;j++)
		{
			printf(" ");
		}
		for(c=2*(n-z)-1;c>0;c--)
		{
			printf("*");
		}
		printf("\n");
	}
	return 0; 
 } 
 
